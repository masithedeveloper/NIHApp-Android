<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_driver_details"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="com.judy.smartschoolbus.activities.DriverDetails">

    <Spinner android:layout_width="match_parent"
        style="@style/Base.Widget.AppCompat.Spinner.Underlined"
        android:layout_height="wrap_content"
        android:id="@+id/dbList"/>
    <Button
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        style="@style/Base.Widget.AppCompat.Button.Colored"
        android:layout_height="wrap_content"
        android:id="@+id/dfetch"
        android:text="Fetch Details"/>
    <ProgressBar
        android:id="@+id/progressBarD"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:visibility="gone"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Driver : "
        android:textColor="#fff"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        style="@style/Base.TextAppearance.AppCompat.Widget.ActionMode.Subtitle"/>
    <EditText
        android:layout_width="match_parent"
        android:textColor="#fff"
        android:enabled="false"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/dName"/>
    <Button
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        style="@style/Base.Widget.AppCompat.Button.Colored"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:id="@+id/dCall"
        android:text="Call"/>

</LinearLayout>
